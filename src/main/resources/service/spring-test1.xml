<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans xmlns="http://www.springframework.org/schema/beans"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
        <!-- 支持Spring注解 -->
        <bean class="org.springframework.context.annotation.CommonAnnotationBeanPostProcessor" />
        <!-- 注册一个BeanPostProcessor -->
        <bean id="postProcessor" class="com.sujiawei.java.core.PostProcessor"/>
        <!-- 注册一个BeanFactoryPostProcessor -->
        <bean id="factoryPostProcessor" class="com.sujiawei.java.core.FactoryPostProcessor"/>
        <!-- 普通bean -->
        <bean id="beanFactoryPostProcessorTest" class="com.sujiawei.java.core.BeanFactoryPostProcessorTest">
            <property name="name" value="张三"/>
            <property name="sex" value="男"/>
        </bean>
        <bean id="beanFactoryPostProcessorTest1" class="com.sujiawei.java.core.BeanFactoryPostProcessorTest1">
            <property name="name" value="张三"/>
            <property name="sex" value="男"/>
        </bean>
    </beans>

</beans>